<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reading">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/fg_menu"
            class="com.educa.FragmentMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_menu"/>
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            style="@style/style_title"
            android:text="@string/txt_title"
            android:layout_below="@+id/fg_menu"
           />
        <TextView
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_content"
            android:text="@string/txt_context"
            style="@style/style_bigTxt"
            android:layout_below="@+id/txt_title"
            />
        <TextView
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_contentTwo"
            android:text="@string/txt_context"
            style="@style/style_bigTxt"
            android:layout_below="@+id/txt_content"
            android:layout_marginBottom="50dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back"
            style="@style/style_btnBorderPurpleSmall"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/db_btn_border"
            android:text="@string/txt_back"
            android:layout_below="@id/txt_contentTwo"
            android:layout_marginLeft="120dp"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_go_quiz"
            android:layout_gravity="center_horizontal"
            style="@style/style_btnYellowSmall"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/db_btn_solid"
            android:text="@string/txt_quiz_content"
            android:layout_below="@id/txt_contentTwo"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/btn_back"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>