<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragement_likert">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/rectangle_2"
            android:layout_width="260dp"
            android:layout_height="89dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="417dp"
            android:background="@drawable/ic_card_likert"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/txt_aula"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="423dp"
            android:fontFamily="@font/montserrat"
            android:gravity="top"
            android:text="@string/txt_title"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:textStyle="bold" />


        <ImageView

            android:id="@+id/img_ruim"
            android:layout_below="@+id/txt_aula"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_marginLeft="90dp"
            android:backgroundTint="#FFFFFF"
            android:src="@mipmap/notlike" />


        <ImageView
           android:id="@+id/img_melhorar"
            android:layout_below="@+id/txt_aula"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_marginLeft="130dp"
            android:backgroundTint="#FFFFFF"
            android:src="@mipmap/improve" />


        <ImageView
            android:layout_below="@+id/txt_aula"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_marginLeft="170dp"
            android:backgroundTint="#FFFFFF"
            android:src="@mipmap/doubt" />



        <ImageView
            android:id="@+id/img_like"
            android:layout_below="@+id/txt_aula"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_marginLeft="210dp"
            android:backgroundTint="#FFFFFF"
            android:src="@mipmap/liked" />


        <ImageView
            android:id="@+id/img_love"
            android:layout_below="@+id/txt_aula"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_marginLeft="250dp"
            android:backgroundTint="#FFFFFF"
            android:src="@mipmap/loved" />


        <TextView
            android:id="@+id/txt_ruim"
            android:layout_below="@id/img_ruim"
            android:layout_width="30dp"
            android:layout_height="9dp"
            android:layout_marginLeft="89dp"
            android:text="@string/txt_notlike"
            android:textSize="6sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_melhorar"
            android:layout_toRightOf="@id/txt_ruim"
           android:layout_marginLeft="12dp"
            android:layout_below="@+id/img_melhorar"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="@string/txt_improve"
            android:textSize="6sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_naosei"
            android:layout_toRightOf="@id/txt_melhorar"
            android:layout_below="@id/img_melhorar"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:text="@string/txt_doubt"
            android:textSize="6sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_like"
            android:layout_toRightOf="@id/txt_naosei"
            android:layout_below="@+id/img_like"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:text="@string/txt_liked"
            android:textSize="6sp"
            android:textStyle="bold" />

        <TextView
            android:layout_toRightOf="@+id/txt_like"
            android:layout_below="@+id/img_love"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:text="@string/txt_loved"
            android:textSize="6sp"
            android:textStyle="bold" />
    </RelativeLayout>


</FrameLayout>